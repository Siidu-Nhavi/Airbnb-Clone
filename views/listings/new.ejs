<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8" offset-2>

            <body>
                <h3>create a new listing</h3>

                <form method="POST" action="/listings" class="needs-validation" novalidate
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input name="listing[title]" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a title.</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please provide a description.</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" type="file" class="form-control" required>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Price</label>
                            <input name="listing[price]" type="number" class="form-control" required>
                            <div class="invalid-feedback">Please enter a price.</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="col-md-8 mb-3">
                            <label class="form-label">Country</label>
                            <input name="listing[country]" type="text" class="form-control" required>
                            <div class="invalid-feedback">Please enter a country name.</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input name="listing[location]" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a location.</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Category</label>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[category]" value="rooms">
                            <label class="form-check-label">Rooms</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[category]" value="beach">
                            <label class="form-check-label">Beach</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[category]" value="mountain">
                            <label class="form-check-label">Mountain</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[category]" value="luxury">
                            <label class="form-check-label">Luxury</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[category]" value="budget">
                            <label class="form-check-label">Budget</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[category]" value="trending">
                            <label class="form-check-label">Trending</label>
                        </div>
                    </div>


                    <button type="submit" class="btn btn-dark mb-3">Add</button>
                </form>
            </body>
        </div>
    </div>