<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8" offset-2>

            <body>
                <h3>create a new listing</h3>

                <form method="POST" action="/listings" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input name="listing[title]" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a title.</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please provide a description.</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Image Link</label>
                        <input name="listing[image]" type="url" class="form-control">
                        <div class="invalid-feedback">Please enter a valid image URL.</div>
                       
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Price</label>
                            <input name="listing[price]" type="number" class="form-control" required>
                            <div class="invalid-feedback">Please enter a price.</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="col-md-8 mb-3">
                            <label class="form-label">Country</label>
                            <input name="listing[country]" type="text" class="form-control" required>
                            <div class="invalid-feedback">Please enter a country name.</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input name="listing[location]" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a location.</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark mb-3">Add</button>
                </form>
            </body>
        </div>
    </div>