<% layout("layouts/boilerplate") %>


  <style>
    #filters {
      display: flex;
      align-items: center;
      gap: 1.2rem;
      padding: 1rem;
      overflow-x: auto;
      white-space: nowrap;
    }

    #filters::-webkit-scrollbar {
      display: none;
    }

    .filter {
      text-align: center;
      cursor: pointer;
      color: #555;
      transition: color 0.2s ease, transform 0.2s ease;
      min-width: 70px;
      flex-shrink: 0;
    }

    .filter i {
      font-size: 1rem;
      display: block;
      margin-bottom: 0.2rem;
    }

    .filter p {
      font-size: 0.8rem;
      margin: 0;
    }

    .filter:hover {
      color: #000;
      transform: scale(1.1);
    }

    .tax-info {
      display: none;
      font-size: 0.85rem;
      color: #666;
    }
    .tax-toggle {
      border:1px solid black;
      border-radius:1rem;
      height: 3.0rem;
      margin-left: auto;
      padding-left: 0.9rem;
      display: flex;
      align-items: center;
    }

    .tax-toggle label {
      font-size: 0.85rem;
      cursor: pointer;
    }

    @media (max-width: 768px) {
      .filter i {
        font-size: 0.95rem;
      }

      .filter p {
        font-size: 0.75rem;
      }

      .tax-toggle label {
        font-size: 0.8rem;
      }
    }


    @media (max-width: 576px) {
      #filters {
        gap: 1rem;
        padding: 0.75rem;
      }

      .filter {
        min-width: 60px;
      }

      .filter i {
        font-size: 0.9rem;
      }

      .filter p {
        font-size: 0.7rem;
      }

      .tax-toggle {
        margin-left: 0;
      }
    }

    @media (hover: none) {
      .filter:hover {
        transform: none;
      }
    }
  </style>


  <div id="filters">
    <div class="filter" data-category="trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>

    <div class="filter" data-category="rooms">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>

    <div class="filter" data-category="mountain">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Mountain City</p>
    </div>

    <div class="filter" data-category="castles">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>

    <div class="filter" data-category="arctic">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>

    <div class="filter" data-category="camping">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Campings</p>
    </div>

    <div class="filter" data-category="farm">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farm</p>
    </div>

    <div class="filter" data-category="beach">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>

    <div class="filter" data-category="luxury">
      <div><i class="fa-solid fa-gem"></i></div>
      <p>Luxury</p>
    </div>
    <div class="filter" data-category="top-rated">
      <div><i class="fa-solid fa-star"></i></div>
      <p>Top Rated</p>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Check Tax</label>
      </div>
    </div>
  </div>

  <div class="listings-container text-center">
    <% for (let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
        <div class="card"
          style="width: 20rem; display: inline-block; margin: 15px; position: relative; overflow: hidden;">
          <img src="<%= listing.image.url %>" class="card-img" alt="listing_image"
            style="height: 20rem; object-fit: cover listing-card;">

          <!-- Overlay -->
          <div class="card-img-overlay d-flex align-items-center justify-content-center">
            <h5 class="overlay-text"></h5>
          </div>

          <div class="card-body">
            <p class="card-text"><b>
                <%= listing.title %>
              </b></p>
            <p>
              <%= listing.description %>
            </p>
            <p>â‚¹<%= listing.price ? listing.price.toLocaleString('en-IN') : "N/A" %>/night <i class="tax-info">
                  &nbsp;&nbsp;+18% GST</i></p>
          </div>
        </div>
      </a>
      <% } %>

        <script>
          document.querySelectorAll(".filter").forEach(filter => {
            filter.addEventListener("click", () => {
              const category = filter.dataset.category;
              window.location.href = `/listings?category=${category}`;
            });
          });
        </script>

  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const taxSwitch = document.getElementById("switchCheckDefault");
      const taxInfo = document.getElementsByClassName("tax-info");



      taxSwitch.addEventListener("click", () => {
        for (let info of taxInfo) {
          info.style.display = info.style.display === "inline" ? "none" : "inline";
        }
      });
    });
  </script>